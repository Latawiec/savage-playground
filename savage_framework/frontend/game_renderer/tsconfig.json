{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "game-renderer-frontend/*": ["./dist/*"]
    },
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
}

